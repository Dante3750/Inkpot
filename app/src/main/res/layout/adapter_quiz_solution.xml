<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/pad_10">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageiconnew"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/counttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/imageiconnew"
            android:layout_marginLeft="15dp"
            />


        <TextView
            android:id="@+id/questiontext"
            android:layout_marginStart="@dimen/pad_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/questionnumbertext"
            android:layout_marginStart="@dimen/pad_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toRightOf="@id/questiontext"
            android:layout_marginTop="15dp"/>





        <TextView
            android:layout_below="@id/image1"
            android:layout_toEndOf="@id/questionnumbertext"
            android:id="@+id/questiontext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text=""
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />




        <TextView
            android:layout_toEndOf="@id/questiontext"
            android:layout_marginTop="55dp"
            android:layout_below="@id/questiontext"
            android:id="@+id/optionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A."
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            />


        <TextView
            android:layout_marginTop="55dp"
            android:layout_below="@id/questiontext"
            android:id="@+id/optiontextA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:layout_toEndOf="@id/optionA"
            />




        <TextView
            android:layout_below="@id/optiontextA"
            android:layout_toEndOf="@id/questiontext"
            android:id="@+id/optionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B."
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:textSize="17sp"

            android:layout_marginTop="25dp"
            />


        <TextView
            android:id="@+id/optiontextB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/optionB"
            android:text=""
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:textSize="17sp"
            android:layout_below="@id/optiontextA"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_toEndOf="@id/questiontext"
            android:id="@+id/optionC"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C."
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:layout_below="@id/optiontextB" />


        <TextView
            android:id="@+id/optiontextC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/optionB"
            android:text=""
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:layout_below="@id/optiontextB"
            />

        <TextView
            android:layout_toEndOf="@id/questiontext"
            android:id="@+id/optionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D."
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="17sp"
            android:layout_below="@id/optiontextC" />


        <TextView
            android:id="@+id/optiontextD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/optionB"
            android:text=""
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="17sp"
            android:layout_below="@id/optiontextC"
            />

        <TextView
            android:id="@+id/tv_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/green"
            android:layout_below="@id/optiontextD"/>


        <TextView
            android:id="@+id/showcorrectanswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="16dp"
            android:textColor="@color/green"
            android:layout_below="@id/optiontextD"


            />

        <TextView
            android:id="@+id/studentcorrectanswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:textColor="@color/green"
            android:layout_below="@id/showcorrectanswer"/>



    </RelativeLayout>
    <View
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_ans"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"/>

     </LinearLayout>
