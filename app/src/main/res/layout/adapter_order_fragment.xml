<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_bubble_self"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_offer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:padding="@dimen/logo_top_mar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="@dimen/logo_top_mar"
                android:id="@+id/iv_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_offer_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:text="Use Promocode INKP756 to get"
                    android:textSize="17dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_offer_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:text="10% Off on Bill"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>