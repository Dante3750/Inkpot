<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_offer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:visibility="gone"
                />


            <TextView
                android:layout_marginTop="@dimen/textsize15"
                android:padding="@dimen/pad_5"
                android:layout_below="@id/tv_order"
                android:id="@+id/tv_semester_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_semester_name"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="09-06-2017"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_marginTop="10dp"
                android:padding="@dimen/pad_5"
                android:layout_below="@id/tv_semester_name"
                android:id="@+id/tv_order_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date"
                android:textSize="14sp"
                android:textColor="@android:color/black" />



            <TextView
                android:padding="@dimen/pad_5"
                android:layout_marginTop="@dimen/pad_10"
                android:layout_below="@id/tv_order_total_price"
                android:id="@+id/tv_order_subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Content Name"
                android:textColor="@android:color/black" />

            <TextView
                android:visibility="gone"
                android:padding="@dimen/pad_5"
                android:layout_marginTop="@dimen/textsize15"
                android:layout_below="@id/tv_order_subject_name"
                android:id="@+id/tv_order_discount"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Discount"
                android:textColor="@android:color/black" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_order_subject_name"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_order_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="- \u20B9 20"
                android:textColor="@android:color/black" />

            <TextView
                android:visibility="gone"
                android:padding="@dimen/pad_5"
                android:layout_marginTop="@dimen/textsize15"
                android:layout_below="@id/tv_order_discount"
                android:id="@+id/tv_order_tax"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Tax"
                android:textColor="@android:color/black" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_order_discount"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_order_tax_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="+ \u20B9 5"
                android:textColor="@android:color/black" />


            <View
                android:visibility="gone"
                android:id="@+id/view"
                android:layout_marginTop="@dimen/pad_10"
                android:layout_below="@id/tv_order_tax"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_bubble_self"/>


            <TextView
                android:visibility="gone"
                android:padding="@dimen/pad_5"
                android:layout_marginTop="@dimen/textsize15"
                android:layout_below="@id/view"
                android:id="@+id/tv_order_total"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Total"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_marginTop="@dimen/pad_5"
                android:layout_below="@id/tv_order_expire"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_order_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="\u20B9 85"
                android:textColor="@android:color/black" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>