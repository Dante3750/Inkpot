<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:id="@+id/rl_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_topic_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/iv_unit_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Unit"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_unit_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iv_unit_number"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="General equation"
                android:textColor="@android:color/black"
                android:textSize="@dimen/nor_text_size" />


            <LinearLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_unittest_tbtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignRight="@id/ll_topic_item"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_black"
                android:gravity="center">

                <ImageView
                    android:id="@+id/test_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_icon" />

                <TextView
                    android:id="@+id/tv_unittest_tbtn_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Take Test"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize12"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
