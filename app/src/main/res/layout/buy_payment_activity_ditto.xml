<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray_bg"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>




    <TextView
        android:background="#333333"
        android:padding="@dimen/textsize15"
        android:id="@+id/paymenttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Options"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        />


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_paytm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle"
            app:cardCornerRadius="5dp">


            <ImageView
                android:id="@+id/iv_PTM"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/paytm" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_payu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10"
            android:background="@drawable/bg_rectangle"
            app:cardCornerRadius="5dp">


            <ImageView
                android:id="@+id/iv_PAYU"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/payumoney" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_wallet"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/pad_10"
            android:background="@drawable/bg_rectangle"
            app:cardCornerRadius="5dp">


            <ImageView
                android:id="@+id/iv_WALLET"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/textsize15"
                android:background="@drawable/wallet_ip" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10"
            app:cardCornerRadius="5dp"/>


    </LinearLayout>


</LinearLayout>
