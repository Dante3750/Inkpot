<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="8dp">

    <LinearLayout
        android:padding="@dimen/pad_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="55dp"
                android:background="@drawable/circle_profile_pic_blue"
                android:layout_height="55dp">

                <ImageView
                    android:id="@+id/custom_payment_wallet_icon_iv"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_payment_received_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment cash received"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize14" />

            <TextView
                android:id="@+id/custom_payment_from_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/custom_payment_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_payment_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0.00"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textsize14" />

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
