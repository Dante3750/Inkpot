<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/textsize15">


        <RelativeLayout
            android:id="@+id/rl_test"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rectangle_blue">
            <ImageView
                android:id="@+id/test_img"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/test_icon"/>
            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Result"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:scaleX="0.8"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/test_img"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_que"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/total_ques"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textAllCaps="false"
                    android:text="Total Number of Question:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/questiontext"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_width="270dp"
                android:layout_height="1dp"
                android:background="@color/app_bg_color"/>


            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_check"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textAllCaps="false"
                    android:text="Correct :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/correctanswertext"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_width="270dp"
                android:layout_height="1dp"
                android:background="@color/app_bg_color"/>

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_marks"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_cross"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textAllCaps="false"
                    android:text="Wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wronganswertext"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_width="270dp"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/textsize15"
                android:background="@color/app_bg_color"/>

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_marksnew"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/total_marks"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textAllCaps="false"
                    android:text="Total Marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/totalmarkstext"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btttn"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Answers"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_rectangle_blue" />

    </LinearLayout>

</LinearLayout>